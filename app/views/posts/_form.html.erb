<%= form_with model: post, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "キャンプ場" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :image, "写真" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :description, "説明" %><br />
    <%= f.text_area :description, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :recomended, "ココがおすすめ！！" %><br />
    <%= f.text_field :recomended, class: :form__text %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>